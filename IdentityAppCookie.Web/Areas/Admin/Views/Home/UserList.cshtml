@model List<AdminUserViewModel>
@{
    ViewData["Title"] = "UserList";
}

<h1>UserList</h1>


<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>User Email</th>
            <th>User Roles</th>
            <th>Role Management</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td><user-role-names user-id="@item.Id"></user-role-names></td>
                <td><a asp-controller="Roles" asp-action="RoleAssign" asp-route-id="@item.Id">Assign Role</a></td>
            </tr>
        }

    </tbody>
</table>
