@model List<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}




<div class="row">
    <div class="col-md-6 offset-md-2">
        <h2>Roles</h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
    </div>
    <div class="col-md-2">
        <a class="btn btn-primary" asp-controller="Roles" asp-action="RoleCreate" asp-area="Admin">Add Roles</a>
    </div>
</div>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Role Id</th>
                    <th>Role Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><a asp-controller="Roles" asp-action="RoleUpdate" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit Role</a>
                            <a asp-controller="Roles" asp-action="RoleDelete" asp-route-id="@item.Id" class="btn btn-danger btn-sm my-1 mx-1">Delete Role</a>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


