
@{
    ViewData["Title"] = "RoleAssign";
}
@model List<AssignRoleToUserViewModel>
<h1>RoleAssign</h1>


<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Create A Role</h2>
        <form asp-action="RoleAssign" asp-route-userId="@ViewBag.userId" method="post">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exists">
                    <label class="form-check-label" for="role-@i">@Model[i].Name</label>
                    <input type="hidden" asp-for="@Model[i].Name">
                    <input type="hidden" asp-for="@Model[i].Id">
                </div>
            }
            <div class="form-group mt-3">
                <input type="submit" value="Assign Role" class="btn btn-primary me-5" />
            </div>
        </form>

        <div class="form-group mt-3">
            <a asp-controller="Home" asp-action="UserList">Back to User List</a>
        </div>
       
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}