@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
}
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="row">
    <div class="col-md-6 offset-3">
        <h2>Sign In</h2>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>
        <form asp-controller="Home" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnURL"]" method="post">
            <div class="mb-3">
                <label class="form-label" asp-for="Email"></label>
                <input value="ayavuzisik@gmail.com" class="form-control" asp-for="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Password"></label>
                <input value="Password123*" type="password" class="form-control" asp-for="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3 form-check">
                        <input class="form-check-input" asp-for="RememberMe">
                        <label class="form-check-label" asp-for="RememberMe"></label>
                    </div>
                </div>
                <div class="col-md-6">
                    <a class="btn btn-outline-light-blue float-end" asp-controller="Home" asp-action="ForgotPassword">Forgot Password?</a>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Log In</button>
        </form>

        <br />

        <!-- Facebook Login Button -->
        <div class="text-center">
            <a asp-action="FacebookLogin" class="facebook-login-btn">
                <img src="https://upload.wikimedia.org/wikipedia/commons/5/51/Facebook_f_logo_%282019%29.svg"
                     alt="Facebook Icon" class="facebook-icon">
                Continue with Facebook
            </a>
        </div>
        <br />
        <div class="text-center">
            <a asp-action="GoogleLogin" class="google-login-button">
                <img src="https://cdn-teams-slug.flaticon.com/google.jpg" alt="Google Logo">
                Continue with Google
            </a>
        </div>
    </div>
</div>
